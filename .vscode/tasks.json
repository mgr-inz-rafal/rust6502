{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Generate Assembly",
			"type": "shell",
			"command": "cargo",
			"args": [
				"asm",
				"main::asm6502",
				"--no-color",
				"--asm-style",
				"att",
				"--target",
				"i686-unknown-linux-gnu",
				">output.asm"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "Generate Assembly - Optimized for Size",
			"type": "shell",
			"command": "./build_minimized.sh",
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build"
			}
		},
		{
			"label": "Transpile to 6502",
			"type": "shell",
			"command": "cargo",
			"args": [
				"run",
				"--bin",
				"transpiler"
			],
			"problemMatcher": [
				"$rustc"
			],
			"group": {
				"kind": "build"
			}
		}
	]
}